{
    "private": true,
    "name": "root",
    "license": "MIT",
    "engines": {
        "node": ">=14"
    },
    "packageManager": "pnpm@8.2.0",
    "prettier": {
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
